@model DataAccessLayer.Model.GetSupplierInvoiceForPDF_Result

@{
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href='https://fonts.googleapis.com/css?family=Mulish' rel='stylesheet'>
    <title>Invoice</title>
    <link href="~/Content/CustomInvoiceForPdf.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="split left">
                @if (Model.logo != null && Model.logo != "")
                {
                    <img src="@Model.logo" width="200" height="100" />
                }
            </div>
            <div class="split right">
                <h2>Self Billed Invoice</h2>
            </div>
        </div>
        <div class="mypadding">
            <div class="split left">
                <h3>@Model.SupplierName</h3>
                <h4>@Model.BusinessAddress</h4>
            </div>
            <div class="split right">
                <h4> Invoice Date : @Model.InvoiceDate.Value.ToShortDateString()</h4>
                <h4 style=" word-break: break-word;">Invoice Reference : @Model.SupplierReference@Model.InvoiceReferenceId</h4>
                @if (Model.TaxReference != null)
                {
                    <h4> TAX Reference : @Model.TaxReference</h4>}
                @if (Model.VATNumber != null)
                {
                    <h4> VAT Number : @Model.VATNumber</h4>}
            </div>
        </div>
        <div class="mypadding1">
            <div class="split left">
                <h3>To</h3>
                <h3>ADK Consultancy</h3>
                <h4>Dummy Address</h4>
                <h4>Dummy Address</h4>
            </div>
        </div>
        <div class="mypadding2">
            <table class="table-bord" style="width:100%">
                <thead>
                    <tr style="padding:3px;" class="mytablecell">
                        <th class="mytablecell" colspan="3" style="margin-left:10px;border-right:0px">Description</th>
                        <th class="mytablecell" style="text-align:right;border-left:0px">Amount(GBP)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="mytablecell">
                        <td colspan="2" class="customdescription mytablecell">Hair Services</td>
                        <td class="mytablecell"></td>
                        <td class="mytablecell amountalign">@Convert.ToDecimal(Model.HairService).ToString("N2")</td>
                    </tr>
                    <tr class="mytablecell">
                        <td class="mytablecell" colspan="2">Beauty Services</td>
                        <td class="mytablecell"></td>
                        <td class="mytablecell amountalign">@Convert.ToDecimal(Model.BeautyService).ToString("N2")</td>
                    </tr>
                    @if (Model.Custom1 != null && Model.CustomHeader1 != 0 && Model.CustomHeader1 != null)
                    {
                        <tr class="mytablecell">
                            <td class="mytablecell" colspan="2">@Model.Custom1</td>
                            <td class="mytablecell"></td>
                            <td class="mytablecell amountalign">@Convert.ToDecimal(Model.CustomHeader1).ToString("N2")1</td>
                        </tr>
                    }
                    @if (Model.Custom2 != null && Model.CustomHeader2 != 0 && Model.CustomHeader2 != null)
                    {
                        <tr class="mytablecell">
                            <td class="mytablecell" colspan="2">@Model.Custom2</td>
                            <td class="mytablecell"></td>
                            <td class="mytablecell amountalign">@Convert.ToDecimal(Model.CustomHeader2).ToString("N2")</td>
                        </tr>
                    }
                    @if (Model.Custom3 != null && Model.CustomHeader3 != 0 && Model.CustomHeader3 != null)
                    {
                        <tr class="mytablecell">
                            <td class="mytablecell" colspan="2">@Model.Custom3</td>
                            <td class="mytablecell"></td>
                            <td class="mytablecell amountalign">@Convert.ToDecimal(Model.CustomHeader3).ToString("N2")</td>
                        </tr>
                    }
                    @if (Model.Custom4 != null && Model.CustomHeader4 != 0 && Model.CustomHeader4 != null)
                    {
                        <tr class="mytablecell">
                            <td class="mytablecell" colspan="2">@Model.Custom4</td>
                            <td class="mytablecell"></td>
                            <td class="mytablecell amountalign">@Convert.ToDecimal(Model.CustomHeader4).ToString("N2")</td>
                        </tr>
                    }
                    @if (Model.Custom5 != null && Model.CustomHeader5 != 0 && Model.CustomHeader5 != null)
                    {
                        <tr class="mytablecell">
                            <td class="mytablecell" colspan="2">@Model.Custom5</td>
                            <td class="mytablecell"></td>
                            <td class="mytablecell amountalign">@Convert.ToDecimal(Model.CustomHeader5).ToString("N2")</td>
                        </tr>
                    }
                    <tr>
                        <td colspan="2" style="border:0px"></td>
                        <td class="amountalignheader">Subtotal(Net)</td>
                        <td class="mytablecell amountalign">@Convert.ToDecimal(Model.NetAmount).ToString("N2")</td>
                    </tr>
                    <tr>
                        <td colspan="2"></td>
                        <td class="amountalignheader">VAT</td>
                        <td class="mytablecell amountalign">@Convert.ToDecimal(Model.VATAmount).ToString("N2")</td>
                    </tr>
                    <tr>
                        <td colspan="2"></td>
                        <td class="amountalignheader">Advance Paid</td>
                        <td class="mytablecell amountalign">@Convert.ToDecimal(Model.AdvancePay).ToString("N2")</td>
                    </tr>
                    <tr>
                        <td colspan="2"></td>
                        <td class="amountalignheader">Balance Due</td>
                        <td class="mytablecell amountalign">@Convert.ToDecimal(Model.BalanceDue).ToString("N2")</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
